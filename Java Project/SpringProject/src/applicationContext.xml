<beans xmlns = "http://www.springframework.org/schema/beans" 
xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
	<bean id="emp" class="com.Employee">
		<property name="uid"><value>100</value></property>
		<property name="name"><value>Mansi</value></property>
		<property name="desig"><value>Tester</value></property>
	</bean>
	 
	 <bean id="employee" class="com.Emp">
		<constructor-arg name="uid"><value>100</value></constructor-arg>
		<constructor-arg name="name"><value>Mansi</value></constructor-arg>
		<constructor-arg name="age"><value>22</value></constructor-arg>
		<constructor-arg name="sal"><value>55000</value></constructor-arg>
		<constructor-arg name="desig"><value>Tester</value></constructor-arg>
	</bean>
	 
</beans>