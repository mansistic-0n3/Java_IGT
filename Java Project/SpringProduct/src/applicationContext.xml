<beans xmlns = "http://www.springframework.org/schema/beans" 
xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="prod" class="com.Product">
		<property name="pid"><value>101</value></property>
		<property name="name"><value>Dress</value></property>
		<property name="price"><value>500</value></property>
		<property name="desc"><value>Blue printed Dress</value></property>
	</bean>
	
</beans>